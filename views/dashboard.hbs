<h1>Welcome to your Dashboard, {{user.username}}!</h1>
<div class="maindash">

    <h1>Welcome to your Dashboard, {{user.username}}</h1>

    <button class="">
        <a href="/create-task">Create a Task</a>
    </button>

    {{!-- <div class="titledescription"> --}}
    {{#if tasks}}
    {{#each tasks}}
    <div class="taskWrapper">
        <h3 class="title-thing">{{title}}</h3>
        <p class="p-thing">{{description}}</p>
        <div class="buttonWrapper">
            <button>
                <a href="/update-task/{{_id}}">update</a>
            </button>
            <button>
                <a href="/remove-task/{{_id}}">delete</a>
            </button>
        </div>
    </div>
    {{!-- </div> --}}
    {{/each}}
    {{/if}}
</div>